<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="195dp"
        android:background="@drawable/filter_border"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:id="@+id/FilterHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:animateLayoutChanges="true">

            <LinearLayout
                android:id="@+id/TypeHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type of Location"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <CheckedTextView
                    android:id="@+id/BathroomType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                    android:checked="false"
                    android:gravity="center_vertical"
                    android:onClick="typeButtonClicked"
                    android:paddingLeft="20sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="• Bathroom" />

                <CheckedTextView
                    android:id="@+id/gasStationType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                    android:checked="false"
                    android:gravity="center_vertical"
                    android:onClick="typeButtonClicked"
                    android:paddingLeft="20sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="• Gas Station" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="?android:attr/listDivider" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/FeaturesHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:animateLayoutChanges="true">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Features"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/BathroomFilters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <CheckedTextView
                        android:id="@+id/BathroomDiaper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                        android:gravity="center_vertical"
                        android:onClick="filterButtonClicked"
                        android:paddingLeft="20sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="• Diaper changing station"
                        android:visibility="visible" />

                    <CheckedTextView
                        android:id="@+id/BathroomWheelchair"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                        android:gravity="center_vertical"
                        android:onClick="filterButtonClicked"
                        android:paddingLeft="20sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="• Wheelchair accessible"
                        android:visibility="visible" />

                    <CheckedTextView
                        android:id="@+id/BathroomGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                        android:gravity="center_vertical"
                        android:onClick="filterButtonClicked"
                        android:paddingLeft="20sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="• All-gender bathroom"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/GasStationFilters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <CheckedTextView
                        android:id="@+id/GasStationGrocery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                        android:gravity="center_vertical"
                        android:onClick="filterButtonClicked"
                        android:paddingLeft="20sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="• Has grocery store"
                        android:visibility="visible" />

                    <CheckedTextView
                        android:id="@+id/GasStationCarWash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                        android:gravity="center_vertical"
                        android:onClick="filterButtonClicked"
                        android:paddingLeft="20sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="• Has car wash"
                        android:visibility="visible" />
                </LinearLayout>

                <View
                    android:id="@+id/divider_2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="?android:attr/listDivider" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/VerificationHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verification Status"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <CheckedTextView
                    android:id="@+id/VerifiedChecked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                    android:checked="false"
                    android:gravity="center_vertical"
                    android:onClick="filterButtonClicked"
                    android:paddingLeft="20sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="• Community verified bathroom" />

                <View
                    android:id="@+id/divider_3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="?android:attr/listDivider" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/FilterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:animateLayoutChanges="true">

            <CheckedTextView
                android:id="@+id/ExpandFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checkMark="@drawable/filter_show_check"
                android:checked="false"
                android:gravity="center"
                android:onClick="filterExpandClicked"
                android:text="Filter"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeScreenActivity" >

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/roundcorner"
            android:layout_marginBottom="30dp"
            android:src="@android:drawable/ic_menu_search" />

        <ImageButton
            android:id="@+id/addButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/roundcorner"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="70dp"
            android:src="@android:drawable/ic_menu_add" />
    </fragment>

</RelativeLayout>