<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="195dp"
        android:background="@drawable/filter_border"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:id="@+id/FilterHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:animateLayoutChanges="true">

            <LinearLayout
                android:id="@+id/TypeHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type of Location"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <CheckedTextView
                    android:id="@+id/BathroomType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                    android:gravity="center_vertical"
                    android:onClick="typeButtonClicked"
                    android:paddingLeft="20sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="• Bathroom" />

                <CheckedTextView
                    android:id="@+id/gasStationType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                    android:gravity="center_vertical"
                    android:onClick="typeButtonClicked"
                    android:paddingLeft="20sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="• Gas Station" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="?android:attr/listDivider" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/FeaturesHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Features"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/BathroomFilters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <CheckedTextView
                        android:id="@+id/BathroomDiaper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                        android:gravity="center_vertical"
                        android:onClick="filterButtonClicked"
                        android:paddingLeft="20sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="• Diaper changing station"
                        android:visibility="visible" />

                    <CheckedTextView
                        android:id="@+id/BathroomWheelchair"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                        android:gravity="center_vertical"
                        android:onClick="filterButtonClicked"
                        android:paddingLeft="20sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="• Wheelchair accessible"
                        android:visibility="visible" />

                    <CheckedTextView
                        android:id="@+id/BathroomGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                        android:gravity="center_vertical"
                        android:onClick="filterButtonClicked"
                        android:paddingLeft="20sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="• All-gender bathroom"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/GasStationFilters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <CheckedTextView
                        android:id="@+id/GasStationGrocery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                        android:gravity="center_vertical"
                        android:onClick="filterButtonClicked"
                        android:paddingLeft="20sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="• Has grocery store"
                        android:visibility="visible" />

                    <CheckedTextView
                        android:id="@+id/GasStationCarWash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                        android:gravity="center_vertical"
                        android:onClick="filterButtonClicked"
                        android:paddingLeft="20sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="• Has car wash"
                        android:visibility="visible" />
                </LinearLayout>

                <View
                    android:id="@+id/divider_2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="?android:attr/listDivider" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/VerificationHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verification Status"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <CheckedTextView
                    android:id="@+id/VerifiedChecked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                    android:gravity="center_vertical"
                    android:onClick="filterButtonClicked"
                    android:paddingLeft="20sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="• Community verified bathroom" />

                <View
                    android:id="@+id/divider_3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="?android:attr/listDivider" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/FilterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:animateLayoutChanges="true">

            <CheckedTextView
                android:id="@+id/ExpandFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checkMark="@drawable/filter_show_check"
                android:checked="false"
                android:gravity="center"
                android:onClick="filterExpandClicked"
                android:text="Filter"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeScreenActivity">

        <Button
            android:id="@+id/addButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="30dp"
            android:background="@drawable/add_button"
            android:paddingBottom="5dp"
            android:text="+"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="50dp" />
    </fragment>

    <LinearLayout
        android:id="@+id/details_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_alignBottom="@+id/map"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/bathroom_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Bathroom Name"/>

            <ImageView
                android:id="@+id/verified_bathroom_check"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/bathroom_name_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/verified_check" />

            <ImageView
                android:id="@+id/exit_details"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/exit" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:progressTint="#ffd32c"
                android:secondaryProgressTint="#fbf2b2"
                android:progressBackgroundTint="#dbdbdb"
                android:isIndicator="true"
                android:stepSize="0.1"/>

            <Button
                android:id="@+id/reviewButton"
                android:layout_width="106dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:backgroundTint="#3989ab"
                android:textColor="@color/white"
                android:text="+ REVIEW" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/clipboard_icon"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/checkmark"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:text="Wheelchair Accessible"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/checkmark"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:text="All-gender"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_height="130dp"
                android:layout_width="4dp"
                android:background="#d6e5e7"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/walking_icon"/>

               <TextView
                   android:id="@+id/addressText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   android:layout_marginBottom="5dp"
                   android:textSize="15dp"
                   android:text="• 157 S Mattis Ave"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:text="• 0.5 mi"/>

                <TextView
                    android:id="@+id/locationDescriptionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:text="• 2nd floor, near elevator"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignTop="@+id/details_card"
        android:background="@color/black"/>
</RelativeLayout>